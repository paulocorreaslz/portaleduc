		<class>br.jus.trema.vraptorbridge.models.Auditing</class>
		<class>br.jus.trema.vraptorbridge.models.Authorization</class>
		<class>br.jus.trema.vraptorbridge.models.Resource</class>
		<class>br.jus.trema.vraptorbridge.models.Role</class>
		<class>br.jus.trema.vraptorbridge.models.User</class>
		
		<!-- app models, it's optional do add them -->
		<class>br.jus.trema.portaleduc.models.Estado</class>
		<class>br.jus.trema.portaleduc.models.Pais</class>
		<class>br.jus.trema.portaleduc.models.Artigo</class>
		<class>br.jus.trema.portaleduc.models.Comentario</class>
    </persistence-unit>

</persistence>
